extends layout.pug 

block content
    if error
        p.err Please, add some info!

    if success
        p.suc Successful addition!

    if deleted
        p.suc Deleted!

    form.form(action="/add" method="POST") 
        input.input(type="text" placeholder="Add your list of things to do" name="todo")
        button.btn Add 
    
    div.todos 
        if todos.length
            each todo in todos
                p.todo 
                    if todo.done
                        a.done(href=`/${todo.id}/update`) #{ todo.name }
                    else
                        a.undone(href=`/${todo.id}/update`) #{ todo.name }
                    
                    a.del(href=`${todo.id}/delete`) Delete
        else 
            p.todo You haven't added anything yet
            